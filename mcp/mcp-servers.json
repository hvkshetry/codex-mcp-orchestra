{
  "mcpServers": {
    "office-assistant": {
      "command": "codex",
      "args": ["mcp"],
      "env": {
        "CODEX_HOME": "${OFFICE_AGENT_HOME:-${HOME}/admin/.codex}"
      }
    },
    "openbb-analyst": {
      "command": "codex-custom",
      "args": ["mcp"],
      "env": {
        "CODEX_HOME": "${FINANCE_AGENT_HOME:-${HOME}/investing/.codex}"
      }
    },
    "router": {
      "command": "codex",
      "args": ["mcp"],
      "env": {
        "CODEX_HOME": "${ROUTER_AGENT_HOME:-${HOME}/.codex}"
      }
    }
  }
}